  <h1><%= @post.title %></h1>
  <p>
   <%= @post.content %>
  </p>
 <ul>
   <% @post.comments.each do |comment| %>
   <li> <% comment.content %> </li>
 </ul>
   <% end %>

   <%= form_for @comment do |f|  %>
     <%= f.text_field :content %>
     <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Select a User'  %>
     <%= f.submit %>
 <% end %>
